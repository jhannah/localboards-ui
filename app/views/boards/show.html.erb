<h1 data-bind="text: title">Viewing board</h1>
<br />
<div class="leftColumn">
  <div class="badge-container">
    <div class="row">
      <ul class="thumbnails list-unstyled">
        <li class="span3">
          <div class="thumbnail" style="padding: 0">
            <div style="padding:4px">
              <div class="colorbar blue"></div>
            </div>
            <div class="caption">
              <p data-bind="text: duties">This org's duties</p>
            </div>
            <div class="modal-footer" style="text-align: left">
              <div class="row-fluid">
                <div class="span4"><b data-bind="text: size">1</b><br/><small>SEATS</small></div>
                <div class="span4"><b data-bind="text: openSeats">1</b><br/><small>SEATS<br />OPEN</small></div>
                <div class="span4">
                <!-- ko if: isActive -->
                <b>IS</b>
                <!-- /ko -->
                <!-- ko ifnot: isActive -->
                <b>NOT</b>
                <!-- /ko -->
                <br />
                <small>ACTIVE</small>
                </div>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="rightColumn">
  <div class="orgInfo">
    <h3>Meeting Info</h3>
    <table>
      <tbody>
        <!-- ko if: url -->
        <tr>
          <td>URL:</td>
          <td><a data-bind="attr: { href: url }">Visit Website</a></td>
        </tr>
        <!-- /ko -->
        <!-- ko if: meetingDates() -->
        <tr>
          <td>Meeting Dates:</td>
          <td data-bind="text: meetingDates">N/A</td>
        </tr>
        <!-- /ko -->
        <!-- ko if: meetingPlace() -->
        <tr>
          <td>Meeting Place:</td>
          <td data-bind="text: meetingPlace">N/A</td>
        </tr>
        <!-- /ko -->
        <!-- ko if: meetingTime() -->
        <tr>
          <td>Meeting Time:</td>
          <td data-bind="text: meetingTime">N/A</td>
        </tr>
        <!-- /ko -->
      </tbody>
    </table>
  </div>
  <div class="qualifications">
    <!-- ko if: qualifications() -->
    <h3>Qualifications to Apply</h3>
    <span data-bind="text: qualifications">Qualifications ...</span>
    <!-- /ko -->
  </div>
  <div class="openings">
    <!-- ko if: openings().length > 0-->
    <h3>Openings</h3>
    <table>
      <theader>
        <tr>
          <th>Date</th>
          <th>Position</th>
        </tr>
      </theader>
      <tbody data-bind="foreach: openings()">
        <tr>
          <td><span data-bind="date">N/A</span></td>
          <td><span data-bind="position">N/A</span></td>
        </tr>
      </tbody>
    </table>
    <!-- /ko -->
  </div>
  <div class="members">
    <!-- ko if: members().length > 0-->
    <h3>Members</h3>
    <div data-bind="foreach: members()">
      <div class="member" data-bind="with: person()">
        <span class="memberName" data-bind="text: fullName"></span>
        <!-- ko if: $parent.appointedDate -->
        (Appointed: <span data-bind="text: $parent.appointedDate"></span>)
        <!-- /ko -->
        <!-- ko if: $parent.title -->
        [<span data-bind="text: $parent.title"></span>]
        <!-- /ko -->
      </div>
    </div>
    <!-- /ko -->
  </div>
</div>
